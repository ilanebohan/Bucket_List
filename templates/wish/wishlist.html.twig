{% extends 'base.html.twig' %}

{% block title %}BucketList - Wish List{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Wishlist List</h1>
    {# For each wish coming from controller #}
    {% for wish in wishList %}
                <a href="{{ path('app_wish_details', {'id': wish.id}) }}" class="btn btn-primary">{{ wish.title }} - {{ wish.category }}</a>
    {% endfor %}

</div>
{% endblock %}
